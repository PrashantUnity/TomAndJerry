@page "/playmedia"

<MudGrid>
    <MudItem xs="12" lg="9" Style="overflow-x: hidden; overflow-y: auto;">
        <div class="video-container">
            <iframe width="560" height="315" src="https://drive.google.com/file/d/1PTNdhnqbhzSWUCfAinIefP5cfr6Dezuw/preview" frameborder="0"
                    allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
        </div>
        <MudList>
            <MudListItem> 
                <MudText>
                    Video Name
                </MudText>
            </MudListItem>
            <MudListItem>
                <MudText>
                   <Giscus/>
                </MudText>
            </MudListItem>
        </MudList>
    </MudItem>
    <MudItem xs="12" lg="3" >
        @for (int i = 0; i < 10; i++)
        {
             <Thumbnail/>
        }
    </MudItem>
</MudGrid> 
<style>
    .video-container {
        position: relative;
        padding-bottom: 56.25%; /* 16:9 */
        height: 0;
    }

        .video-container iframe {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
        }
        body{
            overflow-x: hidden;
            overflow-y: auto;
            -ms-overflow-style: none;
            scrollbar-width: none; /* Firefox */
        }

        body::-webkit-scrollbar {
            display: none;
        } 
</style>