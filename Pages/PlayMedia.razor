@page "/playmedia/{videId}"
@inject NavigationManager nav
<MudPaper Class="d-flex flex-wrap justify-center " Style="background-color:transparent" Elevation="0" Width="100%"> 
    <MudGrid>
        <MudItem xs="12" lg="9" Style="overflow:scroll; height:100vh;">
            <div class="video-container">
                <iframe 
                    width="560" 
                    height="315"
                    src="https://drive.google.com/file/d/@($"{VideId}")/preview"
                    frameborder="0"
                    allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" 
                    allowfullscreen>
                </iframe>
            </div>
            <MudList Style="background-color:lightgrey">
                <MudListItem> 
                    <MudText>
                        @Data.GetVideo(VideId).Description
                    </MudText>
                </MudListItem>
                <MudListItem >
                    <MudExpansionPanel Text="Comments" >
                        <Giscus Term="@Data.GetVideo(VideId).CommentName" />
                    </MudExpansionPanel> 
                </MudListItem>
            </MudList>
        </MudItem>
        <MudItem xs="12" lg="3" Style="overflow:scroll; height:100vh;">
            <MudPaper Class="d-flex flex-wrap justify-center "
                      Style="background-color:transparent"
                      Elevation="0"
                      Width="100%">
                @foreach (var item in videos)
                {
                    <MudPaper @onclick="()=>GoTOPage(item)" Style="background-color:transparent" Elevation="0">
                        <Thumbnail VideoModel="@item" />
                    </MudPaper>
                }
            </MudPaper>
        </MudItem>
    </MudGrid> 
</MudPaper> 

@code
{
    [Parameter]
    public string VideId { get; set; }
    List<Video> videos = Data.GetRandomVideo();
    public void GoTOPage(Video video)
    {
        nav.NavigateTo($"playmedia/{video.VideoId}");
    } 
}
<style>
    .video-container {
        position: relative;
        padding-bottom: 56.25%; /* 16:9 */
        height: 0;
    }

        .video-container iframe {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
        }
        body{
            overflow-x: hidden;
            overflow-y: auto;
            -ms-overflow-style: none;
            scrollbar-width: none; /* Firefox */
        }

        body::-webkit-scrollbar {
            display: none;
        } 
</style>